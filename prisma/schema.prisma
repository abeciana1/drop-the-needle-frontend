// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  hosted Host[]
  participants Participant[]
}

model Host {
  id  Int @id @default(autoincrement())
  user_id Int
  user User @relation(fields: [user_id], references: [id])
  power_hour_id Int
  power_hour PowerHour @relation(fields: [power_hour_id], references: [id])
}

model Participant {
  id Int @id @default(autoincrement())
  user_id Int @map("host_id")
  user User @relation(fields: [user_id], references: [id])
  power_hour_id Int
  power_hour PowerHour @relation(fields: [power_hour_id], references: [id])
}

model PowerHour {
  id Int @id @default(autoincrement())
  title String
  description String
  cover_image String
  date_time DateTime
  created_at DateTime
  hosts Host[]
  participants Participant[]
  songs PowerHourSongs[]
  meeting_link String
  @@map("power_hours")
}

model PowerHourSongs {
  id  Int @id @default(autoincrement())
  song_title String
  song_artist String
  youtube_link String
  start_time String
  end_time String
  power_hour_id Int
  power_hour PowerHour @relation(fields: [power_hour_id], references: [id])
  order_number Int
  created_at DateTime
}