// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}

model Host {
  id  Int @id @default(autoincrement())
  user_id Int
  power_hour_id Int
  power_hours PowerHour[]
}

model Participant {
  id Int @id @default(autoincrement())
  user_id Int
  power_hour_id Int
  power_hours PowerHour[]
}

model PowerHour {
  id Int @id @default(autoincrement())
  title String
  description String
  cover_image String
  date_time DateTime
  created_at DateTime
  hosts Host[]
  participants Participant[]
}